<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="200dp"
    android:background="@color/half_gray_one"
    android:contentDescription="@string/hello_world" >

    <TextView
        android:id="@+id/text_input_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="40dp"
        android:background="#00FF0000"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/input_password"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="@dimen/password_inputicon_height"
        android:layout_x="40dp"
        android:layout_y="80dp"
        android:gravity="center_vertical|center_horizontal" >

        <ImageView
            android:id="@+id/password_one"
            android:layout_width="@dimen/password_inputicon_width"
            android:layout_height="@dimen/password_inputicon_height"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="1"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/ic_password_input" />

        <ImageView
            android:id="@+id/password_two"
            android:layout_width="@dimen/password_inputicon_width"
            android:layout_height="@dimen/password_inputicon_height"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="1"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/ic_password_input" />

        <ImageView
            android:id="@+id/password_three"
            android:layout_width="@dimen/password_inputicon_width"
            android:layout_height="@dimen/password_inputicon_height"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="1"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/ic_password_input" />

        <ImageView
            android:id="@+id/password_four"
            android:layout_width="@dimen/password_inputicon_width"
            android:layout_height="@dimen/password_inputicon_height"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="1"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/ic_password_input" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="130dp" >

        <TextView
            android:id="@+id/text_input_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/password_notice_bg_shape"
            android:gravity="center"
            android:padding="2dp"
            android:singleLine="true"
            android:text="@string/wrong_password"
            android:textColor="#FFFFFFFF" />

    </RelativeLayout>

</AbsoluteLayout>