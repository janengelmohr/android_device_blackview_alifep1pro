<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/password_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/gray_level_one"
    tools:context=".PasswordActivity" >

    <include
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        layout="@layout/password_panel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="@color/gray_level_one"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/key_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/password_number_color"
                android:minHeight="60dp"
                android:minWidth="@dimen/password_key_min_height"
                android:text="@string/password_keyboard_1"
                android:textSize="@dimen/password_key_text_size" />

            <TextView
                android:layout_width="@dimen/password_line_width"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/no_color" />

            <Button
                android:id="@+id/key_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/password_number_color"
                android:minHeight="@dimen/password_key_min_height"
                android:text="@string/password_keyboard_2" 
                android:textSize="@dimen/password_key_text_size"/>

            <TextView
                android:layout_width="@dimen/password_line_width"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/no_color" />

            <Button
                android:id="@+id/key_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/password_number_color"
                android:minHeight="@dimen/password_key_min_height"
                android:text="@string/password_keyboard_3" 
                android:textSize="@dimen/password_key_text_size"/>

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/password_line_width"
            android:layout_weight="1"
            android:background="@color/no_color" />
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/key_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/password_number_color"
                android:minHeight="@dimen/password_key_min_height"
                android:text="@string/password_keyboard_4" 
                android:textSize="@dimen/password_key_text_size"/>

             <TextView
                android:layout_width="@dimen/password_line_width"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/no_color" />

            <Button
                android:id="@+id/key_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/password_number_color"
                android:minHeight="@dimen/password_key_min_height"
                android:text="@string/password_keyboard_5" 
                android:textSize="@dimen/password_key_text_size"/>

             <TextView
                android:layout_width="@dimen/password_line_width"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/no_color" />

            <Button
                android:id="@+id/key_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/password_number_color"
                android:minHeight="@dimen/password_key_min_height"
                android:text="@string/password_keyboard_6"
                android:textSize="@dimen/password_key_text_size" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/password_line_width"
            android:layout_weight="1"
            android:background="@color/no_color" />
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/key_seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/password_number_color"
                android:minHeight="@dimen/password_key_min_height"
                android:text="@string/password_keyboard_7" 
                android:textSize="@dimen/password_key_text_size"/>

             <TextView
                android:layout_width="@dimen/password_line_width"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/no_color" />

            <Button
                android:id="@+id/key_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/password_number_color"
                android:minHeight="@dimen/password_key_min_height"
                android:text="@string/password_keyboard_8" 
                android:textSize="@dimen/password_key_text_size"/>

             <TextView
                android:layout_width="@dimen/password_line_width"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/no_color" />

            <Button
                android:id="@+id/key_nine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/password_number_color"
                android:minHeight="@dimen/password_key_min_height"
                android:text="@string/password_keyboard_9" 
                android:textSize="@dimen/password_key_text_size"/>

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/password_line_width"
            android:layout_weight="1"
            android:background="@color/no_color" />
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/key_seven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray_level_three" 
                android:minHeight="@dimen/password_key_min_height" />

             <TextView
                android:layout_width="@dimen/password_line_width"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/no_color" />

            <Button
                android:id="@+id/key_zero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/password_number_color"
                android:minHeight="@dimen/password_key_min_height"
                android:text="@string/password_keyboard_0" 
                android:textSize="@dimen/password_key_text_size"/>

             <TextView
                android:layout_width="@dimen/password_line_width"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/no_color" />

            <Button
                android:id="@+id/key_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/password_clear_key_color"
                android:minHeight="@dimen/password_key_min_height"
                android:text="@string/password_keyboard_c" 
                android:textSize="@dimen/password_key_text_size"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>