<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="PreferencesBgTheme">
        <item name="android:background">@drawable/bg_topbar</item>
    </style>

<style name="PreferencesTheme" parent="android:Theme">
    <item name="android:windowTitleSize">60dp</item>
    <item name="android:windowTitleBackgroundStyle">@style/PreferencesBgTheme</item>
    <item name="android:switchStyle">@style/mySwitchStyle</item>
    <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_funui</item>
    <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_funui</item>
    <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="mySwitchStyle" parent="@*android:style/Widget.CompoundButton.Switch">
    <item name="android:track">@drawable/switch_track_funui</item>
    <item name="android:thumb">@drawable/switch_inner_funui</item>
    <item name="android:showText">false</item>
    </style>

    <style name="AlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.Alert">
    </style>
</resources>
